<!DOCTYPE html>
<html>
  <head>
    <title>UrbanSherpa</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  </head>
  <header>
  <div class="nav">
  <% if current_user %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h1 class="navbar-brand">Urban Sherpa</h1>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link"> <%= link_to "Home", tours_path %></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link"><%= link_to "Cart: #{tour_cart}", cart_path%></a>
        </li>
        <li class="nav-item dropdown" id="user_nav_drop">
          <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="navbarDropdown"><%= current_user.user_name%></a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown" id="dropmenu_items">
              <a><%= link_to "Profile", "/users/#{current_user.id}", class:"dropdown-item"%></a>
              <a class="dropdown-item"><%= link_to "Itinerary | #{tour_cart}", cart_path, class:"dropdown-item"%></a>
              <% if is_guide? %>
              <a class="dropdown-item"><%= link_to "Create A Tour", new_tour_path, class: "dropdown-item"%></a>
              <% end %>
              <div class="dropdown-divider"></div>
                <a class="dropdown-item"><%= link_to "Sign Out", "/signout", class:"dropdown-item"%></a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
    <% else %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <h1 class="navbar-brand"><%= link_to "Urban Sherpa", tours_path%></h1>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link"><%= link_to "Sign In", "/signin", remote: true%></a>
            <li>
            <li class="nav-item active">
              <a class="nav-link"><%= link_to "Sign Up", "/signup"%></a>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>
    <span id="dropdown_login"></span>
  </div>
  </header>


  <body id="main_body">
    <div class = "container">
      <div class="alert_notice">
          <span id="alert"><%= flash[:alert] %></span>
          <span id="notice"><%= flash[:notice] %></span>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
