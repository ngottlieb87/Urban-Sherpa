<div class = "card cart_display">
  <div class = "card-body">
    <h3>Current Tours</h3>
    <hr>
    <% if @tour_orders.any? %>
      <% @tour_orders.each do |item| %>
      <p><strong><%= item.tour.title %></strong></p>
      <p>Guide Name: <%= item.tour.user.user_name %></p>
      <p>Number in tour: <%= item.quantity%></p>
      <strong><p>Price: <%= number_to_currency item.tour.price%></p></strong>
      <strong><p class="remove_item"><%= link_to "Remove From Cart", tour_order_path(item),
          :data=>{:confirm => "Remove Tour From Cart?", :method => "delete"}%></p></strong>
      <hr>
      <% end %>
      <h4> Cart Total: <%= number_to_currency current_order.total_price %></h4>
      <br>
    <%= link_to "Checkout", new_charge_path, class: "btn btn-primary" %>
    <% else %>
      <p><%= "You havent signed up for any tours yet."%> <%= link_to "Go and check'em out!", tours_path %></p>
    <% end %>
  </div>
  <h4 class = "back"><%= link_to "Back To Tours", tours_path %></h4>
</div>
