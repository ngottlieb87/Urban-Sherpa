<div class = "card">
  <div class = "card-body">
    <h3>Current Tours</h3>
    <hr>
    <% if @tour_orders.any? %>
      <% @tour_orders.each do |item| %>
      <p><strong><%= item.tour.title %> </strong><%= number_to_currency item.tour.price%> <%= link_to "Remove", tour_order_path(item),
          :data=>{:confirm => "Are You Sure?", :method => "delete"}%></p>
      <strong><p>Number in tour: <%= item.quantity%></p></strong>
      <hr>
      <% end %>
      <h4> Your Total: <%= number_to_currency current_order.total_price %></h4>
      <br>
    <%= link_to "Checkout", new_charge_path, class: "btn btn-primary" %>
    <% else %>
      <p><%= "You havent signed up for any tours yet."%> <%= link_to "Go and check'em out!", tours_path %></p>
    <% end %>
  </div>
  <h4 class = "back"><%= link_to "Back To Tours", tours_path %></h4>
</div>
