<div class ="row">

<% @tours.each do |tour| %>
  <div class = "col-4-lg">
    <div class = "card">
        <div class = "card-body">
        <h1><%= tour.title %></h1>
          <p>"<%= tour.description %>"</p>
          <p>Price: <%= number_to_currency tour.price %></p>
          <p>Tour Date: <%= tour.date %></p>
        </div>
    </div>
  </div>
  <% end %>
  </div>
