<% if is_guide? %>
  <button class="btn btn-dark"><%=link_to "Create A Tour", new_tour_path %></button>

  <div class ="row">

  <% @tours.each do |tour| %>
    <div class = "col-md-4">
      <div class = "card">
          <div class = "card-body">
          <h1><%= link_to tour.title, tour_path(tour) %></h1>
          <%= link_to image_tag(tour.photo.url(:medium),class:"tour_img"), tour_path(tour) %>
          <p>"<%= tour.description %>"</p>
            <p>Price: <%= number_to_currency tour.price %></p>
            <p>Tour Date: <%= tour.date %></p>
          </div>
      </div>
    </div>
    <% end %>
  </div>
  <% else %>
  <div class ="row">

  <% @tours.each do |tour| %>
    <div class = "col-md-4">
      <div class = "card">
          <div class = "card-body">
          <h1><%= link_to tour.title, tour_path(tour) %></h1>
            <%= link_to image_tag(tour.photo.url(:medium),class:"tour_img"), tour_path(tour)%>
            <p>"<%= tour.description %>"</p>
            <p>Price: <%= number_to_currency tour.price %></p>
            <p>Tour Date: <%= tour.date %></p>
            <% if is_admin? %>
              <%= link_to "Edit", edit_tour_path(tour) %> |
              <%= link_to "Delete", tour_path(tour),
            :data=>{:confirm => "Are You Sure?", :method => "delete"}%>
            <% end %>
          </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
